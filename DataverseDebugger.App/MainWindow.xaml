<Window x:Class="DataverseDebugger.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataverseDebugger.App"
        mc:Ignorable="d"
        Title="Dataverse Debugger" Height="640" Width="1024"
        Icon="dd_logo.ico"
        Loaded="OnLoaded"
        Closing="OnClosing"
        Closed="OnClosed">
    <Window.Resources>
        <Style x:Key="SidebarExpandedOnlyStyle" TargetType="FrameworkElement">
            <Setter Property="Visibility" Value="Visible"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsSidebarCollapsed, RelativeSource={RelativeSource AncestorType=Window}}" Value="True">
                    <Setter Property="Visibility" Value="Collapsed"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="SidebarCollapsedOnlyStyle" TargetType="FrameworkElement">
            <Setter Property="Visibility" Value="Collapsed"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsSidebarCollapsed, RelativeSource={RelativeSource AncestorType=Window}}" Value="True">
                    <Setter Property="Visibility" Value="Visible"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Grid Background="{DynamicResource ThemeBackgroundBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="SidebarColumn" Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <Grid Background="#1B1F2A">
            <Grid.Resources>
                <Style x:Key="SidebarIconButtonStyle" TargetType="Button">
                    <Setter Property="Height" Value="44"/>
                    <Setter Property="HorizontalAlignment" Value="Stretch"/>
                    <Setter Property="Margin" Value="0 6 0 12"/>
                    <Setter Property="Background" Value="#252B3D"/>
                    <Setter Property="Foreground" Value="#ECEFF1"/>
                    <Setter Property="BorderBrush" Value="#30374D"/>
                    <Setter Property="BorderThickness" Value="1"/>
                    <Setter Property="FontSize" Value="16"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                    <Setter Property="Cursor" Value="Hand"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="IconBorder"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                        CornerRadius="4"
                                        Padding="10 0"
                                        Margin="2 0">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="IconBorder" Property="Background" Value="#30374D"/>
                                        <Setter TargetName="IconBorder" Property="BorderBrush" Value="#4F6CF0"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter TargetName="IconBorder" Property="Background" Value="#3F58C8"/>
                                        <Setter TargetName="IconBorder" Property="BorderBrush" Value="#3F58C8"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
                <Style x:Key="CollapsedMiniButtonStyle" TargetType="Button">
                    <Setter Property="Width" Value="26"/>
                    <Setter Property="Height" Value="22"/>
                    <Setter Property="Margin" Value="0"/>
                    <Setter Property="Background" Value="#252B3D"/>
                    <Setter Property="Foreground" Value="#ECEFF1"/>
                    <Setter Property="BorderBrush" Value="#30374D"/>
                    <Setter Property="BorderThickness" Value="1"/>
                    <Setter Property="FontSize" Value="14"/>
                    <Setter Property="Cursor" Value="Hand"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="MiniBorder"
                                        Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        CornerRadius="4">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="MiniBorder" Property="Background" Value="#30374D"/>
                                        <Setter TargetName="MiniBorder" Property="BorderBrush" Value="#4F6CF0"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter TargetName="MiniBorder" Property="Background" Value="#3F58C8"/>
                                        <Setter TargetName="MiniBorder" Property="BorderBrush" Value="#3F58C8"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Grid.Resources>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <StackPanel x:Name="SidebarHeaderPanel" Margin="12 16 12 8" HorizontalAlignment="Stretch">
                <Button x:Name="SidebarToggleButton"
                    Style="{StaticResource SidebarIconButtonStyle}"
                    Width="48"
                    HorizontalAlignment="Left"
                    Click="OnToggleSidebarClick"
                    ToolTip="Collapse menu">
                    <TextBlock Text="☰" HorizontalAlignment="Center"/>
                </Button>
                <Image x:Name="SidebarLogoImage"
                       Source="dd_logo.png"
                       Stretch="Uniform"
                       HorizontalAlignment="Center"
                       Margin="0 12 0 12"
                       SnapsToDevicePixels="True"
                       UseLayoutRounding="True"
                       RenderOptions.BitmapScalingMode="HighQuality">
                    <Image.Style>
                        <Style TargetType="Image">
                            <Setter Property="Width" Value="84"/>
                            <Setter Property="Height" Value="84"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsSidebarCollapsed, RelativeSource={RelativeSource AncestorType=Window}}" Value="True">
                                    <Setter Property="Width" Value="40"/>
                                    <Setter Property="Height" Value="40"/>
                                    <Setter Property="Margin" Value="0 8 0 8"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Image.Style>
                </Image>
                <TextBlock Text="Dataverse Debugger"
                           Foreground="White"
                           FontSize="18"
                           FontWeight="SemiBold"
                           HorizontalAlignment="Center"
                           Style="{StaticResource SidebarExpandedOnlyStyle}"/>
            </StackPanel>

            <StackPanel Grid.Row="1" Margin="12 0 12 0">
                <StackPanel.Resources>
                    <Style x:Key="NavButtonContentStyle" TargetType="Grid">
                        <Setter Property="HorizontalAlignment" Value="Stretch"/>
                        <Setter Property="VerticalAlignment" Value="Center"/>
                        <Setter Property="Margin" Value="12 0 0 0"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsSidebarCollapsed, RelativeSource={RelativeSource AncestorType=Window}}" Value="True">
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="Margin" Value="0"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                    <Style x:Key="SidebarNavLabelStyle" TargetType="TextBlock">
                        <Setter Property="Visibility" Value="Visible"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsSidebarCollapsed, RelativeSource={RelativeSource AncestorType=Window}}" Value="True">
                                <Setter Property="Visibility" Value="Collapsed"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                    <Style x:Key="NavButtonStyle" TargetType="Button">
                        <Setter Property="Height" Value="44"/>
                        <Setter Property="Margin" Value="0 6 0 0"/>
                        <Setter Property="Background" Value="#252B3D"/>
                        <Setter Property="Foreground" Value="#ECEFF1"/>
                        <Setter Property="BorderBrush" Value="#30374D"/>
                        <Setter Property="BorderThickness" Value="1"/>
                        <Setter Property="Padding" Value="22 0"/>
                        <Setter Property="FontSize" Value="13"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="HorizontalContentAlignment" Value="Left"/>
                        <Setter Property="SnapsToDevicePixels" Value="True"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                                    <Border x:Name="NavBorder"
                                                            Background="{TemplateBinding Background}"
                                                            BorderBrush="{TemplateBinding BorderBrush}"
                                                            BorderThickness="{TemplateBinding BorderThickness}"
                                                            CornerRadius="2"
                                                            SnapsToDevicePixels="True">
                                                        <ContentPresenter x:Name="NavContentPresenter"
                                                                          HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                                          VerticalAlignment="Center"
                                                                          RecognizesAccessKey="True"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="Tag" Value="Selected">
                                            <Setter TargetName="NavBorder" Property="Background" Value="#4F6CF0"/>
                                            <Setter TargetName="NavBorder" Property="BorderBrush" Value="#4F6CF0"/>
                                            <Setter Property="Foreground" Value="#FFFFFF"/>
                                        </Trigger>
                                        <MultiTrigger>
                                            <MultiTrigger.Conditions>
                                                <Condition Property="IsMouseOver" Value="True"/>
                                                <Condition Property="Tag" Value="Selected"/>
                                            </MultiTrigger.Conditions>
                                            <Setter TargetName="NavBorder" Property="Background" Value="#3F58C8"/>
                                            <Setter TargetName="NavBorder" Property="BorderBrush" Value="#3F58C8"/>
                                        </MultiTrigger>
                                        <MultiTrigger>
                                            <MultiTrigger.Conditions>
                                                <Condition Property="IsMouseOver" Value="True"/>
                                                <Condition Property="Tag" Value="{x:Null}"/>
                                            </MultiTrigger.Conditions>
                                            <Setter TargetName="NavBorder" Property="Background" Value="#30374D"/>
                                            <Setter TargetName="NavBorder" Property="BorderBrush" Value="#4F6CF0"/>
                                        </MultiTrigger>
                                        <Trigger Property="IsEnabled" Value="False">
                                            <Setter TargetName="NavBorder" Property="Background" Value="#808080"/>
                                            <Setter TargetName="NavBorder" Property="BorderBrush" Value="#808080"/>
                                            <Setter Property="Foreground" Value="#D0D0D0"/>
                                        </Trigger>
                                        <Trigger Property="IsKeyboardFocused" Value="True">
                                            <Setter TargetName="NavBorder" Property="BorderBrush" Value="#4F6CF0"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsSidebarCollapsed, RelativeSource={RelativeSource AncestorType=Window}}" Value="True">
                                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                <Setter Property="Padding" Value="0"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </StackPanel.Resources>
                <Button x:Name="NavBrowser" Style="{StaticResource NavButtonStyle}" Click="OnNavBrowser">
                    <Grid Style="{StaticResource NavButtonContentStyle}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="🌐" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="0"/>
                        <TextBlock Text="Browser" Margin="8 0 0 0" Style="{StaticResource SidebarNavLabelStyle}" Grid.Column="1" VerticalAlignment="Center"/>
                    </Grid>
                </Button>
                <Button x:Name="NavRestBuilder" Style="{StaticResource NavButtonStyle}" Click="OnNavRestBuilder">
                    <Grid Style="{StaticResource NavButtonContentStyle}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="🛠" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="0"/>
                        <TextBlock Text="REST Builder" Margin="8 0 0 0" Style="{StaticResource SidebarNavLabelStyle}" Grid.Column="1" VerticalAlignment="Center"/>
                    </Grid>
                </Button>
                <Button x:Name="NavRequests" Style="{StaticResource NavButtonStyle}" Click="OnNavRequests">
                    <Grid Style="{StaticResource NavButtonContentStyle}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="📡" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="0"/>
                        <TextBlock Text="Requests" Margin="8 0 0 0" Style="{StaticResource SidebarNavLabelStyle}" Grid.Column="1" VerticalAlignment="Center"/>
                    </Grid>
                </Button>
                <Button x:Name="NavEnvironments" Style="{StaticResource NavButtonStyle}" Click="OnNavEnvironments">
                    <Grid Style="{StaticResource NavButtonContentStyle}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="🏷" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="0"/>
                        <TextBlock Text="Environments" Margin="8 0 0 0" Style="{StaticResource SidebarNavLabelStyle}" Grid.Column="1" VerticalAlignment="Center"/>
                    </Grid>
                </Button>
                <Button x:Name="NavRunner" Style="{StaticResource NavButtonStyle}" Click="OnNavRunner">
                    <Grid Style="{StaticResource NavButtonContentStyle}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="🚀" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="0"/>
                        <TextBlock Text="Runner" Margin="8 0 0 0" Style="{StaticResource SidebarNavLabelStyle}" Grid.Column="1" VerticalAlignment="Center"/>
                    </Grid>
                </Button>
                <Button x:Name="NavSettings" Style="{StaticResource NavButtonStyle}" Click="OnNavSettings">
                    <Grid Style="{StaticResource NavButtonContentStyle}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="⚙" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="0"/>
                        <TextBlock Text="Settings" Margin="8 0 0 0" Style="{StaticResource SidebarNavLabelStyle}" Grid.Column="1" VerticalAlignment="Center"/>
                    </Grid>
                </Button>
                
                <!-- Version and repo link -->
                <StackPanel Margin="12,16,12,0" Style="{StaticResource SidebarExpandedOnlyStyle}">
                    <TextBlock x:Name="VersionTextBlock" Text="v0.0.0" Foreground="#808080" FontSize="11" HorizontalAlignment="Center"/>
                    <TextBlock HorizontalAlignment="Center" Margin="0,4,0,0">
                        <Hyperlink NavigateUri="https://github.com/VanHinthem/DataverseDebugger" 
                                   RequestNavigate="OnGitHubLinkClick"
                                   Foreground="#6B8DD6" 
                                   TextDecorations="None">
                            GitHub
                        </Hyperlink>
                    </TextBlock>
                    <TextBlock Text="© VanHinthem" Foreground="#808080" FontSize="10" HorizontalAlignment="Center" Margin="0,4,0,0"/>
                </StackPanel>
            </StackPanel>

            <Border Grid.Row="2" Margin="12" Padding="12" Background="#23283A" CornerRadius="8" Style="{StaticResource SidebarExpandedOnlyStyle}">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0 0 0 4">
                        <TextBlock Text="🚀" FontSize="16" Foreground="#FFFFFF"/>
                        <TextBlock Text="Runner" Foreground="#E0E0E0" FontWeight="SemiBold" Margin="8 0 0 0" VerticalAlignment="Center"/>
                    </StackPanel>
                    <Border Background="#808080" CornerRadius="4" Padding="6 4" Margin="0 8 0 4" Visibility="Collapsed" x:Name="StoppedBadge">
                        <TextBlock Text="Stopped" Foreground="#D0D0D0" FontWeight="Bold"/>
                    </Border>
                    <Border Background="#00C853" CornerRadius="4" Padding="6 4" Margin="0 8 0 4" Visibility="Collapsed" x:Name="HealthyBadge">
                        <TextBlock Text="Ready" Foreground="White" FontWeight="Bold"/>
                    </Border>
                    <Border Background="#FFB300" CornerRadius="4" Padding="6 4" Margin="0 8 0 4" Visibility="Collapsed" x:Name="DegradedBadge">
                        <TextBlock Text="Degraded" Foreground="Black" FontWeight="Bold"/>
                    </Border>
                    <Border Background="#D50000" CornerRadius="4" Padding="6 4" Margin="0 8 0 4" Visibility="Collapsed" x:Name="ErrorBadge">
                        <TextBlock Text="Error" Foreground="White" FontWeight="Bold"/>
                    </Border>
                    <Grid Margin="0 4 0 0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Button Grid.Column="0" Height="28" Margin="0 0 6 0" Style="{StaticResource ModernToolbarButton}" Click="OnRefreshClick">
                            <TextBlock Text="🔄 Refresh" HorizontalAlignment="Center"/>
                        </Button>
                        <Button Grid.Column="1" Height="28" Style="{StaticResource ModernToolbarButton}" Click="OnRestartRunnerClick">
                            <TextBlock Text="♻ Restart" HorizontalAlignment="Center"/>
                        </Button>
                    </Grid>
                </StackPanel>
            </Border>
            <Grid Grid.Row="2" Margin="0 12" HorizontalAlignment="Center" Style="{StaticResource SidebarCollapsedOnlyStyle}">
                    <Border Width="{Binding ElementName=NavBrowser, Path=ActualWidth}"
                            Background="#23283A"
                            CornerRadius="8"
                            Padding="6 8"
                            ToolTip="{Binding StatusText}">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="🚀"
                                       FontSize="20"
                                       Foreground="#FFFFFF"
                                       HorizontalAlignment="Center"/>
                            <Ellipse Width="18"
                                     Height="18"
                                     Margin="0 10 0 0"
                                     HorizontalAlignment="Center">
                                <Ellipse.Style>
                                    <Style TargetType="Ellipse">
                                        <Setter Property="Fill" Value="#B0BEC5"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Status}" Value="Ready">
                                                <Setter Property="Fill" Value="#00C853"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Status}" Value="Degraded">
                                                <Setter Property="Fill" Value="#FFB300"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Status}" Value="Error">
                                                <Setter Property="Fill" Value="#D50000"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Ellipse.Style>
                            </Ellipse>
                            <TextBlock Text="Refresh &amp; Restart in expanded menu"
                                       Foreground="#90A4AE"
                                       FontSize="10"
                                       Margin="0 8 0 0"
                                       TextAlignment="Center"
                                       TextWrapping="Wrap"
                                       Style="{StaticResource SidebarCollapsedOnlyStyle}" Visibility="Collapsed"/>
                        </StackPanel>
                    </Border>
                </Grid>
        </Grid>

        <!-- Main content -->
        <Grid Grid.Column="1" Background="{DynamicResource ThemeBackgroundBrush}" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Orientation="Horizontal" Margin="0 0 0 12" VerticalAlignment="Center">
                <TextBlock x:Name="SectionTitle" Text="Runner" Foreground="{DynamicResource ThemeTextPrimaryBrush}" FontSize="16" FontWeight="SemiBold"/>
                <TextBlock x:Name="SectionDescription" Foreground="{DynamicResource ThemeTextSecondaryBrush}" Margin="12 2 0 0"/>
            </StackPanel>

            <ContentControl x:Name="SectionContent" Grid.Row="1"/>

            <Border x:Name="EnvironmentLoadingOverlay" Grid.RowSpan="2" Background="#CC1e1e1e" Visibility="Collapsed" Panel.ZIndex="10">
                <Border Background="{DynamicResource ThemeSurfaceBrush}" BorderBrush="{DynamicResource ThemeBorderBrush}" BorderThickness="1" CornerRadius="8" Padding="16" Width="360" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <StackPanel>
                        <TextBlock x:Name="EnvironmentLoadingText" Text="Loading environment..." Foreground="{DynamicResource ThemeTextPrimaryBrush}" FontWeight="SemiBold" Margin="0 0 0 8"/>
                        <ProgressBar Height="6" IsIndeterminate="True"/>
                        <StackPanel x:Name="EnvironmentLoadingStepsPanel" Margin="0 12 0 0">
                            <StackPanel Orientation="Horizontal" Margin="0 2 0 0">
                                <TextBlock x:Name="LoadingStep1Icon" Text="[ ]" Foreground="{DynamicResource ThemeTextMutedBrush}" Width="28"/>
                                <TextBlock x:Name="LoadingStep1Text" Text="Checking sign-in" Foreground="{DynamicResource ThemeTextMutedBrush}"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0 2 0 0">
                                <TextBlock x:Name="LoadingStep2Icon" Text="[ ]" Foreground="{DynamicResource ThemeTextMutedBrush}" Width="28"/>
                                <TextBlock x:Name="LoadingStep2Text" Text="Fetching metadata" Foreground="{DynamicResource ThemeTextMutedBrush}"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0 2 0 0">
                                <TextBlock x:Name="LoadingStep3Icon" Text="[ ]" Foreground="{DynamicResource ThemeTextMutedBrush}" Width="28"/>
                                <TextBlock x:Name="LoadingStep3Text" Text="Fetching plugin catalog" Foreground="{DynamicResource ThemeTextMutedBrush}"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0 2 0 0">
                                <TextBlock x:Name="LoadingStep4Icon" Text="[ ]" Foreground="{DynamicResource ThemeTextMutedBrush}" Width="28"/>
                                <TextBlock x:Name="LoadingStep4Text" Text="Starting runner" Foreground="{DynamicResource ThemeTextMutedBrush}"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0 2 0 0">
                                <TextBlock x:Name="LoadingStep5Icon" Text="[ ]" Foreground="{DynamicResource ThemeTextMutedBrush}" Width="28"/>
                                <TextBlock x:Name="LoadingStep5Text" Text="Initializing browser" Foreground="{DynamicResource ThemeTextMutedBrush}"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Border>
        </Grid>
    </Grid>
</Window>
