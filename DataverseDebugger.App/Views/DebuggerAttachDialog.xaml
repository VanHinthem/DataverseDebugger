<Window x:Class="DataverseDebugger.App.Views.DebuggerAttachDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Attach Debugger"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Select a running Visual Studio instance:" Foreground="#37474F" FontWeight="SemiBold" Margin="0 0 0 8"/>

        <ListBox x:Name="InstancesList"
                 Grid.Row="1"
                 Width="520"
                 Height="160"
                 DisplayMemberPath="DisplayName"
                 Margin="0 0 0 10"
                 MouseDoubleClick="OnInstanceDoubleClick"/>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Attach" Width="90" Height="26" Margin="0 0 8 0" Click="OnAttachClick"/>
            <Button Content="Cancel" Width="90" Height="26" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
