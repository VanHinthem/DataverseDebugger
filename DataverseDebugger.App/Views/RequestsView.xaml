<UserControl x:Class="DataverseDebugger.App.Views.RequestsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:conv="clr-namespace:DataverseDebugger.App.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="900">
    <UserControl.Resources>
        <conv:StatusConverter x:Key="StatusConverter" />
        <conv:StatusBrushConverter x:Key="StatusBrushConverter" />
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />
    </UserControl.Resources>
    <Grid Background="{DynamicResource ThemeBackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="0 0 0 8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <Button Width="90" Height="26" Style="{DynamicResource ModernToolbarButton}" Click="OnClearRequests">
                    <TextBlock Text="&#x1F9F9; Clear"/>
                </Button>
                <Button Width="90" Height="26" Margin="8 0 0 0" Style="{DynamicResource ModernToolbarButton}" Click="OnSaveRequests">
                    <TextBlock Text="&#x1F4BE; Save"/>
                </Button>
                <Button Width="90" Height="26" Margin="8 0 0 0" Style="{DynamicResource ModernToolbarButton}" Click="OnLoadRequests">
                    <TextBlock Text="&#x1F4C2; Load"/>
                </Button>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="16 0 12 0">
                    <TextBlock Text="Matches" Foreground="{DynamicResource ThemeTextSecondaryBrush}" VerticalAlignment="Center" Margin="0 0 6 0" FontSize="12"/>
                    <ToggleButton x:Name="MatchFilterToggle"
                                  Style="{DynamicResource ModernToggleSwitch}"
                                  Background="{DynamicResource IndicatorMatchBrush}"
                                  IsChecked="True"
                                  Checked="OnRequestFilterToggleChanged"
                                  Unchecked="OnRequestFilterToggleChanged"
                                  ToolTip="Show requests that have matching plugin types"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0 0 12 0">
                    <TextBlock Text="Steps" Foreground="{DynamicResource ThemeTextSecondaryBrush}" VerticalAlignment="Center" Margin="0 0 6 0" FontSize="12"/>
                    <ToggleButton x:Name="StepFilterToggle"
                                  Style="{DynamicResource ModernToggleSwitch}"
                                  Background="{DynamicResource IndicatorStepsBrush}"
                                  IsChecked="True"
                                  Checked="OnRequestFilterToggleChanged"
                                  Unchecked="OnRequestFilterToggleChanged"
                                  ToolTip="Show requests that have candidate plugin steps"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0 0 12 0">
                    <TextBlock Text="Convertible" Foreground="{DynamicResource ThemeTextSecondaryBrush}" VerticalAlignment="Center" Margin="0 0 6 0" FontSize="12"/>
                    <ToggleButton x:Name="ConvertibleFilterToggle"
                                  Style="{DynamicResource ModernToggleSwitch}"
                                  Background="{DynamicResource IndicatorConvertibleBrush}"
                                  IsChecked="False"
                                  Checked="OnRequestFilterToggleChanged"
                                  Unchecked="OnRequestFilterToggleChanged"
                                  ToolTip="Show requests that can convert to SDK operations"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Other" Foreground="{DynamicResource ThemeTextSecondaryBrush}" VerticalAlignment="Center" Margin="0 0 6 0" FontSize="12"/>
                    <ToggleButton x:Name="NoIndicatorFilterToggle"
                                  Style="{DynamicResource ModernToggleSwitch}"
                                  Background="{DynamicResource IndicatorOtherBrush}"
                                  IsChecked="False"
                                  Checked="OnRequestFilterToggleChanged"
                                  Unchecked="OnRequestFilterToggleChanged"
                                  ToolTip="Show requests without any indicator"/>
                </StackPanel>
            </StackPanel>

            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0 0 12 0">
                    <TextBlock Text="Capture" Foreground="{DynamicResource ThemeTextSecondaryBrush}" VerticalAlignment="Center" Margin="0 0 6 0" FontSize="12"/>
                    <ToggleButton x:Name="CaptureToggle"
                                  Style="{DynamicResource ModernToggleSwitch}"
                                  Checked="OnCaptureToggleChanged"
                                  Unchecked="OnCaptureToggleChanged"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Auto Proxy" Foreground="{DynamicResource ThemeTextSecondaryBrush}" VerticalAlignment="Center" Margin="0 0 6 0" FontSize="12"/>
                    <ToggleButton x:Name="AutoProxyToggle"
                                  Style="{DynamicResource ModernToggleSwitch}"
                                  Checked="OnAutoProxyToggleChanged"
                                  Unchecked="OnAutoProxyToggleChanged"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="12 0 0 0">
                    <TextBlock Text="Debug" Foreground="{DynamicResource ThemeTextSecondaryBrush}" VerticalAlignment="Center" Margin="0 0 6 0" FontSize="12"/>
                    <ToggleButton x:Name="DebugToggle"
                                  Style="{DynamicResource ModernToggleSwitch}"
                                  Checked="OnDebugToggleChanged"
                                  Unchecked="OnDebugToggleChanged"/>
                </StackPanel>
            </StackPanel>
        </Grid>

        <!-- Filters removed from Requests -->

        <!-- Main content -->
        <Grid Grid.Row="1" Margin="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.6*"/>
                <ColumnDefinition Width="1.8*"/>
            </Grid.ColumnDefinitions>

            <!-- Requests list -->
            <Border Grid.Column="0" Background="{DynamicResource ThemeSurfaceBrush}" CornerRadius="8" Padding="12" BorderBrush="{DynamicResource ThemeBorderBrush}" BorderThickness="1" Margin="0 0 8 0">
                <Grid ClipToBounds="True">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0" Margin="4 0 4 6">
                        <Grid.RenderTransform>
                            <TranslateTransform x:Name="RequestHeaderTransform" />
                        </Grid.RenderTransform>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="26"/>
                            <ColumnDefinition Width="26"/>
                            <ColumnDefinition Width="26"/>
                            <ColumnDefinition Width="70"/>
                            <ColumnDefinition Width="60"/>
                            <ColumnDefinition Width="64"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="[M]" Foreground="{DynamicResource ThemeTextSecondaryBrush}" FontWeight="SemiBold" HorizontalAlignment="Center" VerticalAlignment="Center"
                                   ToolTip="Matching step available (selected DLL + filters)."/>
                        <TextBlock Grid.Column="1" Text="[S]" Foreground="{DynamicResource ThemeTextSecondaryBrush}" FontWeight="SemiBold" HorizontalAlignment="Center" VerticalAlignment="Center"
                                   ToolTip="Candidate steps found for this request."/>
                        <TextBlock Grid.Column="2" Text="[C]" Foreground="{DynamicResource ThemeTextSecondaryBrush}" FontWeight="SemiBold" HorizontalAlignment="Center" VerticalAlignment="Center"
                                   ToolTip="Request can be converted to OrganizationRequest."/>
                        <TextBlock Grid.Column="3" Text="Time" Foreground="{DynamicResource ThemeTextSecondaryBrush}" FontWeight="SemiBold" VerticalAlignment="Center"
                                   ToolTip="Capture timestamp."/>
                        <TextBlock Grid.Column="4" Text="Status" Foreground="{DynamicResource ThemeTextSecondaryBrush}" FontWeight="SemiBold" VerticalAlignment="Center"
                                   ToolTip="HTTP status from runner response (if proxied)."/>
                        <TextBlock Grid.Column="5" Text="Method" Foreground="{DynamicResource ThemeTextSecondaryBrush}" FontWeight="SemiBold" Margin="6 0 0 0" VerticalAlignment="Center"
                                   ToolTip="HTTP method."/>
                        <TextBlock Grid.Column="6" Text="URL" Foreground="{DynamicResource ThemeTextSecondaryBrush}" FontWeight="SemiBold" Margin="8 0 0 0" VerticalAlignment="Center"
                                   ToolTip="Request URL (trimmed)."/>
                    </Grid>
                    <ListBox Grid.Row="1" x:Name="RequestList"
                             ItemsSource="{Binding Requests}"
                             SelectionChanged="OnSelectionChanged"
                             ScrollViewer.ScrollChanged="OnRequestListScrollChanged"
                             ScrollViewer.VerticalScrollBarVisibility="Auto"
                             ScrollViewer.HorizontalScrollBarVisibility="Auto"
                             Background="Transparent"
                             BorderThickness="0"
                             Foreground="{DynamicResource ThemeTextPrimaryBrush}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="4">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="26"/>
                                        <ColumnDefinition Width="26"/>
                                        <ColumnDefinition Width="26"/>
                                        <ColumnDefinition Width="70"/>
                                        <ColumnDefinition Width="60"/>
                                        <ColumnDefinition Width="64"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Foreground="{DynamicResource IndicatorMatchBrush}" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Text" Value=""/>
                                                <Setter Property="Opacity" Value="0"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding HasMatch}" Value="True">
                                                        <Setter Property="Text" Value="[M]"/>
                                                        <Setter Property="Opacity" Value="1"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    <TextBlock Grid.Column="1" Foreground="{DynamicResource IndicatorStepsBrush}" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Text" Value=""/>
                                                <Setter Property="Opacity" Value="0"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding HasSteps}" Value="True">
                                                        <Setter Property="Text" Value="[S]"/>
                                                        <Setter Property="Opacity" Value="1"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    <TextBlock Grid.Column="2" Foreground="{DynamicResource IndicatorConvertibleBrush}" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Text" Value=""/>
                                                <Setter Property="Opacity" Value="0"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding CanConvert}" Value="True">
                                                        <Setter Property="Text" Value="[C]"/>
                                                        <Setter Property="Opacity" Value="1"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    <TextBlock Grid.Column="3" Text="{Binding Timestamp, StringFormat={}{0:HH:mm:ss}}" Foreground="{DynamicResource ThemeTextSecondaryBrush}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                    <TextBlock Grid.Column="4" Text="{Binding ResponseStatus, Converter={StaticResource StatusConverter}}" Foreground="{Binding ResponseStatus, Converter={StaticResource StatusBrushConverter}}" VerticalAlignment="Center" />
                                    <TextBlock Grid.Column="5" Text="{Binding Method}" Margin="6 0 0 0" VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="6" Text="{Binding Url}" Margin="8 0 0 0" TextTrimming="CharacterEllipsis" VerticalAlignment="Center"/>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>

            <!-- Details -->
            <Border Grid.Column="1" Background="{DynamicResource ThemeSurfaceBrush}" CornerRadius="8" Padding="12" BorderBrush="{DynamicResource ThemeBorderBrush}" BorderThickness="1">
                <TabControl x:Name="DetailsTabs"
                            Style="{DynamicResource ModernTabControl}"
                            ItemContainerStyle="{DynamicResource ModernTabItem}">
                    <TabItem Header="Execution">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <StackPanel Margin="12 0 12 0">
                                <TextBlock Text="Execution tree (estimated)" Foreground="{DynamicResource ThemeTextPrimaryBrush}" FontSize="14" FontWeight="SemiBold" Margin="0 0 0 2"/>
                                <TextBlock x:Name="ExecutionTreeSummary" Text="Matches: 0, Candidates: 0" Foreground="{DynamicResource ThemeTextMutedBrush}" FontSize="11" Margin="0 0 0 6"/>
                                <Border BorderBrush="{DynamicResource ThemeBorderBrush}" BorderThickness="1" CornerRadius="4" Padding="12" Margin="12 4 12 10">
                                    <TreeView x:Name="ExecutionTree"
                                              ItemsSource="{Binding ExecutionTreeItems}"
                                              SelectedItemChanged="OnExecutionTreeSelectedItemChanged"
                                              MouseDoubleClick="OnExecutionTreeDoubleClick"
                                              BorderThickness="0"
                                              Background="Transparent">
                                        <TreeView.ItemContainerStyle>
                                            <Style TargetType="TreeViewItem">
                                                <Setter Property="IsExpanded" Value="{Binding IsExpanded, Mode=TwoWay}"/>
                                            </Style>
                                        </TreeView.ItemContainerStyle>
                                        <TreeView.ItemTemplate>
                                            <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                                                <TextBlock Text="{Binding Title}" ToolTip="{Binding ToolTip}">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Foreground" Value="{DynamicResource ThemeTextPrimaryBrush}"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding IsSelectable}" Value="False">
                                                                    <Setter Property="Foreground" Value="{DynamicResource ThemeTextMutedBrush}"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </HierarchicalDataTemplate>
                                        </TreeView.ItemTemplate>
                                    </TreeView>
                                </Border>

                                <TextBlock Text="Select a matched step in the tree to enable debugging."
                                           Foreground="{DynamicResource ThemeTextSecondaryBrush}"
                                           Margin="0 0 0 8"
                                           FontSize="12"/>

                                <StackPanel Orientation="Horizontal" Margin="0 4 0 0" VerticalAlignment="Center">
                                    <Button x:Name="DebugStepButton" Width="160" Click="OnDebugMatchedStep" IsEnabled="False"
                                            Style="{DynamicResource ModernToolbarButton}"
                                            ToolTip="Force execution of matched plugin steps in the emulator for debugging.">
                                        <TextBlock Text="&#x1F41E; Debug step"/>
                                    </Button>
                                </StackPanel>
                            </StackPanel>
                        </ScrollViewer>
                    </TabItem>
                    <TabItem Header="Request/Response">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <StackPanel Margin="12 0 12 0">
                                <TextBlock Text="Request" Foreground="{DynamicResource ThemeTextPrimaryBrush}" FontSize="14" FontWeight="SemiBold" Margin="0 0 0 6"/>
                                <TextBlock Text="Request summary:" Foreground="{DynamicResource ThemeTextSecondaryBrush}"/>
                                <Border BorderBrush="{DynamicResource ThemeBorderBrush}" BorderThickness="1" CornerRadius="4" Padding="6" Margin="0 4 0 8">
                                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                                        <TextBox x:Name="RequestInfoText" Text="-" Foreground="{DynamicResource ThemeTextSecondaryBrush}" TextWrapping="Wrap" Background="Transparent" BorderThickness="0" IsReadOnly="True" TextBoxBase.IsReadOnlyCaretVisible="True"/>
                                    </ScrollViewer>
                                </Border>

                                <TextBlock Text="Headers:" Foreground="{DynamicResource ThemeTextSecondaryBrush}"/>
                                <Border BorderBrush="{DynamicResource ThemeBorderBrush}" BorderThickness="1" CornerRadius="4" Padding="6" Margin="0 4 0 8">
                                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                                        <TextBox x:Name="HeadersText" Text="-" Foreground="{DynamicResource ThemeTextSecondaryBrush}" TextWrapping="Wrap" Background="Transparent" BorderThickness="0" IsReadOnly="True" TextBoxBase.IsReadOnlyCaretVisible="True"/>
                                    </ScrollViewer>
                                </Border>

                                <TextBlock Text="Body (first 4KB, auth redacted):" Foreground="{DynamicResource ThemeTextSecondaryBrush}"/>
                                <Border BorderBrush="{DynamicResource ThemeBorderBrush}" BorderThickness="1" CornerRadius="4" Padding="6" Margin="0 4 0 8">
                                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                                        <TextBox x:Name="BodyText" Text="-" Foreground="{DynamicResource ThemeTextSecondaryBrush}" TextWrapping="Wrap" Background="Transparent" BorderThickness="0" IsReadOnly="True" TextBoxBase.IsReadOnlyCaretVisible="True"/>
                                    </ScrollViewer>
                                </Border>

                                <StackPanel Orientation="Horizontal" Margin="0 4 0 4" VerticalAlignment="Center">
                                    <Button x:Name="SendToRunnerButton" Width="200" HorizontalAlignment="Left" Click="OnSendToRunner"
                                            Style="{DynamicResource ModernToolbarButton}"
                                            ToolTip="Proxy the captured request through the runner and show the response.">
                                        <TextBlock Text="&#x1F680; Send to runner"/>
                                    </Button>
                                    <Button x:Name="SendToBuilderButton" Width="200" Margin="8 0 0 0" HorizontalAlignment="Left" Click="OnSendToBuilder"
                                            Style="{DynamicResource ModernToolbarButton}"
                                            ToolTip="Send the captured request to the REST Builder for further editing.">
                                        <TextBlock Text="&#x1F6E0; Send to builder"/>
                                    </Button>
                                </StackPanel>
                                <TextBox x:Name="RunnerResponseText" Foreground="{DynamicResource ThemeTextSecondaryBrush}" Text="Runner response: -" TextWrapping="Wrap" Background="Transparent" BorderThickness="0" IsReadOnly="True" TextBoxBase.IsReadOnlyCaretVisible="True" Margin="0 0 0 6"/>

                                <TextBlock Text="Runner response body (first 4KB):" Foreground="{DynamicResource ThemeTextSecondaryBrush}"/>
                                <Border BorderBrush="{DynamicResource ThemeBorderBrush}" BorderThickness="1" CornerRadius="4" Padding="6" Margin="0 4 0 0">
                                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                                        <TextBox x:Name="RunnerResponseBodyText" Text="-" Foreground="{DynamicResource ThemeTextSecondaryBrush}" TextWrapping="Wrap" Background="Transparent" BorderThickness="0" IsReadOnly="True" TextBoxBase.IsReadOnlyCaretVisible="True"/>
                                    </ScrollViewer>
                                </Border>
                            </StackPanel>
                        </ScrollViewer>
                    </TabItem>
                </TabControl>
            </Border>
        </Grid>
    </Grid>
</UserControl>
