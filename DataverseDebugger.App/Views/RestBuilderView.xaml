<UserControl x:Class="DataverseDebugger.App.Views.RestBuilderView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
             xmlns:conv="clr-namespace:DataverseDebugger.App.Converters"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="900">
    <UserControl.Resources>
        <conv:BooleanToOnOffConverter x:Key="BooleanToOnOffConverter"/>
    </UserControl.Resources>
    <Grid Background="{DynamicResource ThemeBackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="8 8 8 8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="8 0 0 0">
                <Button x:Name="RefreshButton" Style="{DynamicResource ModernToolbarButton}" Width="80" Click="OnRefreshClick" IsEnabled="False" Margin="0 0 8 0">
                    <TextBlock Text="âŸ³ Reload"/>
                </Button>
                <Button x:Name="DevToolsButton" Style="{DynamicResource ModernToolbarButton}" Width="90" Click="OnDevToolsClick" IsEnabled="False" Margin="0 0 12 0">
                    <TextBlock Text="ðŸ”§ DevTools"/>
                </Button>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0 0 12 0">
                    <TextBlock Text="Capture" Foreground="{DynamicResource ThemeTextSecondaryBrush}" VerticalAlignment="Center" Margin="0 0 6 0" FontSize="12"/>
                    <ToggleButton x:Name="CaptureToggle" Style="{DynamicResource ModernToggleSwitch}" Checked="OnCaptureToggleChanged" Unchecked="OnCaptureToggleChanged"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Auto Proxy" Foreground="{DynamicResource ThemeTextSecondaryBrush}" VerticalAlignment="Center" Margin="0 0 6 0" FontSize="12"/>
                    <ToggleButton x:Name="AutoProxyToggle" Style="{DynamicResource ModernToggleSwitch}" Checked="OnAutoProxyToggleChanged" Unchecked="OnAutoProxyToggleChanged"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="12 0 0 0">
                    <TextBlock Text="Debug" Foreground="{DynamicResource ThemeTextSecondaryBrush}" VerticalAlignment="Center" Margin="0 0 6 0" FontSize="12"/>
                    <ToggleButton x:Name="DebugToggle" Style="{DynamicResource ModernToggleSwitch}" Checked="OnDebugToggleChanged" Unchecked="OnDebugToggleChanged"/>
                </StackPanel>
            </StackPanel>
        </Grid>

        <Border Grid.Row="1" Background="{DynamicResource ThemeSurfaceBrush}" CornerRadius="8" Padding="0" 
                BorderBrush="{DynamicResource ThemeBorderBrush}" BorderThickness="1">
            <Grid x:Name="WebViewContainer"/>
        </Border>
    </Grid>
</UserControl>
